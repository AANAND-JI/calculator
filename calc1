<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JavaScript Calculator</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin-top: 50px; }
        form { display: inline-block; padding: 20px; border: 2px solid black; border-radius: 10px; }
        input, select { padding: 10px; margin: 5px; width: 100%; font-size: 18px; }
        button { padding: 10px 20px; font-size: 18px; cursor: pointer; margin-top: 10px; }
    </style>
</head>
<body>

    <h2>Basic Calculator Using JavaScript</h2>

    <form onsubmit="calculate(event)">
        <input type="number" id="num1" placeholder="Enter 1st Number" required><br>
        <input type="number" id="num2" placeholder="Enter 2nd Number" required><br>

        <select id="operation">
            <option value="add">Addition (+)</option>
            <option value="sub">Subtraction (-)</option>
            <option value="mul">Multiplication (ร)</option>
            <option value="div">Division (รท)</option>
        </select><br>

        <button type="submit">Calculate</button>
    </form>

    <h2 id="result"></h2>

    <script>
        function calculate(event) {
            event.preventDefault(); // prevents form reload

            let num1 = parseFloat(document.getElementById("num1").value);
            let num2 = parseFloat(document.getElementById("num2").value);
            let op = document.getElementById("operation").value;
            let result = "";

            if (op === "add") {
                result = num1 + num2;
            } else if (op === "sub") {
                result = num1 - num2;
            } else if (op === "mul") {
                result = num1 * num2;
            } else if (op === "div") {
                result = num2 !== 0 ? num1 / num2 : "Cannot divide by zero";
            }

            document.getElementById("result").textContent = "Result: " + result;
        }
    </script>

</body>
</html>
